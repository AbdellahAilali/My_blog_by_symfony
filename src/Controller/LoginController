namespace App\Controller;


use App\Entity\User;
use App\Form\UserTestFormType;
use DateTime;
use Doctrine\ORM\EntityManagerInterface;
use Symfony\Bundle\FrameworkBundle\Controller\AbstractController;
use Symfony\Component\Form\FormFactory;
use Symfony\Component\Form\FormFactoryInterface;
use Symfony\Component\HttpFoundation\Request;
use Symfony\Component\Routing\Annotation\Route;

class BrowserTest extends AbstractController
{
    /**
     * @var FormFactory
     */
    private $formFactory;
    /**
     * @var EntityManagerInterface
     */
    private $entityManager;

    /**
     * @param FormFactoryInterface $formFactory
     * @param EntityManagerInterface $entityManager
     */
    public function __construct(
        FormFactoryInterface $formFactory,
        EntityManagerInterface $entityManager)
    {
        $this->formFactory = $formFactory;
        $this->entityManager = $entityManager;
    }

    /**
     * @Route("/browser", name="browserkit_page")
     * @param Request $request
     * @return \Symfony\Component\HttpFoundation\Response
     * @throws \Exception
     */
    public function formAction(Request $request)
    {
        $form = $this
            ->formFactory->create(UserTestFormType::class);

        $users = $form->handleRequest($request);

        $data = $users->getData();

        $tabUser = [];
        if ($form->isSubmitted() && $form->isValid()) {

            foreach ($data as $key => $user) {

                $tabUser= [
                    "username"=>$data['username'],
                    "pseudo"=>$data['pseudo'],
                ];
            }
        }

        //$this->entityManager->persist();
        //$this->entityManager->flush();

        return $this->render('form/index.html.twig', ['form'=> $form->createView()]);
    }

}